@import "./lib/view/styles.styl"

.separator
  height 12px
  background grey_background;
  display inline-block
  top 12px
  position relative
  width 38% /*FIXME: this should be fixed with float instead of % width.*/

.hexagon
  background-color  grey_background;
  margin-top: 30px;
  height: 104px;
  width: 60px;
  position: relative
  display inline-block

  &:before, &:after
    content: " ";
    border-top: 52px solid transparent;
    border-bottom: 52px solid transparent;
    position absolute

  &:before
    border-right: 30px solid grey_background;
    left -30px

  &:after
    border-left: 30px solid grey_background;
    left 60px

  i.glyphicon
    top: 28px;
    font-size: 48px;
    left: 8px;
    color #ffffff

