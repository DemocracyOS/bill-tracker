@import "./lib/view/styles.styl"

#bill-container
  margin: 0 auto;
  max-width: 1100px;
  padding: 0 30px;

  h1
    margin: 0 0 10px;
    color: #0099c7;

  h1:before
    content: "\f15c";
    margin: 0 10px 0 0;
    display: inline-block;
    font-family: FontAwesome;
    font-style: normal;
    font-weight: normal;
    line-height: 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;

  h5
    border-bottom: 1px dotted #aaa;
    color: #aaa;
    padding: 0 0 17px 45px;

  p
    color: #555555;
    font-size: 18px;
    margin: 5px 0;

  ul.authors
    background-color: #ddd;
    border-radius: 4px;
    list-style: none outside none;
    margin: 0 0 10px 45px;
    padding: 16px;

    li
      margin: 0 0 10px;

      p
        margin: 0;
        padding: 0;

      p:first-child
        color: #0099c7;
        margin: 0;

      p:first-child:before
        content: "\f007";
        margin: 0 10px 0 0;
        display: inline-block;
        font-family: FontAwesome;
        font-style: normal;
        font-weight: normal;
        line-height: 1;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;

      p:last-child
        color: #777;
        font-size: 14px;
        line-height: 22px;
        margin: 0 0 0 6px;


  #references
    margin: 0 auto;
    display: block
    position: fixed
    height: 50px
    left: 0;
    right: 0;
    bottom: 0;
